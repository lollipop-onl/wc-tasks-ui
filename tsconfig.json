{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "module": "ES2020",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "component:*": ["src/components/*"],
      "type:*": ["src/types/*"],
      "util:*": ["src/utils/*"]
    }
  },
  "files": ["src/wc.ts"],
  "include": ["src/**/*.ts"]
}
